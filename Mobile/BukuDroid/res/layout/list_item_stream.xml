<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.csie.mpp.buku"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
>
	<TextView
            android:id="@+id/list_stream_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
     />
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
    >
    <ImageView
        android:id="@+id/list_stream_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/maxImageWidth"
        android:padding="@dimen/padding"
      
    />
 
        <TextView
            android:id="@+id/list_stream_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontLarge"
            
        />
         
    </LinearLayout>
   <TextView
            android:id="@+id/list_stream_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
     />

</LinearLayout>