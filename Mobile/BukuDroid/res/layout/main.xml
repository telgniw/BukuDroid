<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.csie.mpp.buku"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
>
    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"
        style="@style/ActionBar"
    />
    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/indicatorSize"
        android:background="#FFFFFF"
        app:footerColor="@color/lightLineColor"
        app:footerLineHeight="1dip"
        app:textSize="@dimen/indicatorFontSize"
        app:textColor="@color/dimTextColor"
        app:selectedColor="@color/brightTextColor"
    />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    />
</LinearLayout>