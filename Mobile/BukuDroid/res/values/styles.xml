<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Background"></style>
    <style name="Background.Dark">
        <item name="android:background">#990000</item>
    </style>
    
    <style name="Font"></style>
    <style name="Font.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/windowTitleFontSize</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">@dimen/windowTitlePadding</item>
    </style>
    <style name="Font.SubTitle">
        <item name="android:textSize">@dimen/fontLarge</item>
        <item name="android:background">@color/lightLineColor</item>
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:padding">@dimen/padding</item>
    </style>
    <style name="Font.Text">
        <item name="android:textSize">@dimen/fontMedian</item>
        <item name="android:padding">@dimen/padding</item>
    </style>
    <style name="Font.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/fontMedian</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="BukuTheme" parent="android:Theme.Light.NoTitleBar">
    </style>
</resources>